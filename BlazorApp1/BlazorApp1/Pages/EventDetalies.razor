                <div class="bloc-titel-event">
                    <h1>@eve.name</h1>
                </div>
                <div class="bloc-desc-event">
                    <p>@eve.description</p>
                </div>
                <AuthorizeView>
                    <Authorized>
                        <div class="bloc-button-event">
                            <ul>
                                <li>
                                    <p><a class="btn-warning">Подписатся на событие</a></p>
