}
else
{
    <p><em>Loading...</em></p>
}


@code {

    [Parameter]
    public string name { get; set; }

    private EventsForecast eve;

    protected override async Task OnInitializedAsync()
    {
        eve = await EventsService.GetEvent(name);
    }
}
